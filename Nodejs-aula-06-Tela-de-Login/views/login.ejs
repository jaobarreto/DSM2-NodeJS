<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>

        <% if(messages.danger) { %>
            <div class="alert alert-danger">
                <%= messages.danger %>
            </div>
            <% } %>

                <div class="container col-4 col-sm-6">
                    <div class="card mt-4">
                        <div class="card-header text-center">
                            <h2>Login de Administrador</h2>
                        </div>
                        <div class="card-body m-auto">
                            <p style="color: red; font-size: 0.7em;">Você precisa estar logado para acessar os recursos
                                do
                                painel.</p>
                        </div>
                        <form action="/authenticate" method="post" novalidate>
                            <div class="mb-3">
                                <label>Email:</label>
                                <input type="email" class="form-control" name="email" placeholder="email@exemplo.com"
                                    required> <br>
                            </div>
                            <div class="mb-3">
                                <label>Senha:</label>
                                <input type="password" class="form-control" name="password"
                                    placeholder="Insira sua senha" required> <br>
                            </div>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Entrar</button>
                    </form>
                    <hr>
                    <h6>Não possui conta? <a href="/cadastro">Cadastre-se!</a></h6>
                </div>
                </div>
                <%- include ('partials/footer.ejs') %>