<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>

        <% if(messages.danger) { %>
            <div class="alert alert-danger">
                <%= messages.danger %>
            </div>
            <% } %>

                <div class="container">
                    <div class="card mt-4">
                        <div class="card-header">
                            <h2>Cadastro de Usuário</h2>
                        </div>
                        <div class="card-body">
                            <p style="color:blue; font-size: 0.7em;">Coloque seus dados para seguir o Cadastro</p>
                        </div>
                        <form action="/createUser" method="post">
                            <label>Email:</label>
                            <input type="email" class="form-control" name="email" placeholder="email@exemplo.com"
                                required> <br>
                            <label>Senha:</label>
                            <input type="password" class="form-control" name="password" placeholder="Insira sua senha"
                                required>
                            <br>
                            <button type="submit" class="btn btn-success btn-block">Cadastrar</button>
                        </form>
                        <hr>
                        <h6>Já possui conta? <a href="/login">Faça o login</a></h6>
                    </div>
                </div>
                <%- include ('partials/footer.ejs') %>